{
  "name": "wing-to-livetrax",
  "description": "Behringer WING to LiveTrax OSC Bridge",
  "author": "Austin Ginn <austinleeginn@gmai.com>",
  "productName": "Wing to LiveTrax",
  "private": true,
  "version": "1.0.1",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "npm run dev:vue & npm run dev:electron",
    "dev:vue": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build:frontend": "vite build",
    "build:package": "electron-builder install-app-deps && electron-builder --mac --arm64",
    "build": "npm run build:frontend && npm run build:package",
    "preview": "vite preview",
    "release": "standard-version",
    "build:mac": "electron-builder --mac --arm64 --x64",
    "build:win": "electron-builder --win --ia32 --x64",
    "build:linux": "electron-builder --linux --x64",
    "build:all": "npm run build:frontend && npm run build:mac && npm run build:win && npm run build:linux",
    "release:ci": "npm run build:all -- --publish always"
  },
  "build": {
    "asar": true,
    "compression": "maximum",
    "appId": "com.aginn.winglivetrax",
    "files": [
      "dist/**",
      "electron/**/*",
      "!**/*.map",
      "!**/__tests__/**",
      "!**/*.ts",
      "!**/docs/**",
      "!**/locale/**"
    ],
    "mac": {
      "icon": "./electron/icons/icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "./electron/icons/icon.ico",
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "icon": "./electron/icons/icon.png",
      "maintainer": "Austin Ginn <austinleeginn@gmail.com>",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "dependencies": {
    "node-osc": "^9.1.5",
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.2.3",
    "electron": "^36.5.0",
    "electron-builder": "^26.0.12",
    "electron-icon-maker": "^0.0.5",
    "rollup-plugin-visualizer": "^6.0.3",
    "standard-version": "^9.5.0",
    "vite": "^6.3.5",
    "wait-on": "^8.0.3"
  }
}
