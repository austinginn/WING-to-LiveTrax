{
  "name": "wing-to-livetrax",
  "description": "Behringer WING to LiveTrax OSC Bridge",
  "author": "Austin Ginn <austinleeginn@gmail.com>",
  "productName": "Wing to LiveTrax",
  "private": true,
  "version": "1.0.4",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "npm run dev:vue & npm run dev:electron",
    "dev:vue": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build:frontend": "vite build",
    "build:macArm": "npm run build:frontend && electron-builder --mac --arm64",
    "build:macIntel": "npm run build:frontend && electron-builder --mac --x64",
    "build:win": "npm run build:frontend && electron-builder --win --x64",
    "build:linux": "npm run build:frontend && electron-builder --linux --x64",
    "build": "npm run build:macArm",
    "build:all": "npm run build:macArm && npm run build:macIntel && npm run build:win && npm run build:linux",
    "preview": "vite preview",
    "release": "standard-version",
    "release:ci": "npm run build:all -- --publish always"
  },
  "build": {
    "asar": true,
    "compression": "maximum",
    "appId": "com.aginn.winglivetrax",
    "files": [
      "dist/**",
      "electron/**/*",
      "electron/build/*",
      "!**/*.map",
      "!**/__tests__/**",
      "!**/*.ts",
      "!**/docs/**",
      "!**/locale/**"
    ],
    "mac": {
      "icon": "./electron/icons/icon.icns",
      "target": "dmg",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "./electron/build/entitlements.mac.plist",
      "entitlementsInherit": "./electron/build/entitlements.mac.plist",
      "category": "public.app-category.music"
    },
    "win": {
      "icon": "./electron/icons/icon.ico",
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "icon": "./electron/icons/icon.png",
      "maintainer": "Austin Ginn <austinleeginn@gmail.com>",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "dependencies": {
    "node-osc": "^9.1.5"
  },
  "devDependencies": {
    "@electron/notarize": "^2.5.0",
    "@vitejs/plugin-vue": "^5.2.3",
    "electron": "^36.5.0",
    "electron-builder": "^26.0.12",
    "electron-icon-maker": "^0.0.5",
    "rollup-plugin-visualizer": "^6.0.3",
    "standard-version": "^9.5.0",
    "vite": "^6.3.5",
    "vue": "^3.5.17",
    "wait-on": "^8.0.3"
  }
}